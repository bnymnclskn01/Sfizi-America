@model SfiziAmerica.WebUIandUX.Areas.Admin.ViewModel.updateUserRoleViewModel
@{
    ViewData["Title"] = "Update New User Role";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}
@section scripts{
    <script src="/PageJs/updateUserRole.js"></script>
}
<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-body">
                <h4 class="header-title">Update New User Role</h4>
                <div class="row">
                    <div class="col-lg-12">
                        <form id="form-submit">
                            <input hidden name="ID" value="@Model.UserRole.ID" />
                            <div class="mb-3">
                                <label for="simpleinput" class="form-label">Role Name</label>
                                <input type="text" class="form-control" value="@Model.UserRole.RoleName" name="RoleName" maxlength="110" required placeholder="Please Enter Role Name" />
                            </div>
                            <div class="mb-3">
                                <label for="simpleinput" class="form-label">Role Code</label>
                                <input type="text" class="form-control" name="RoleCode" value="@Model.UserRole.RoleCode" maxlength="110" required placeholder="Please Enter Role Code" />
                            </div>
                            <div class="mb-3">
                                <label for="simpleinput" class="form-label">Status</label>
                                <select required name="IsActive" class="form-select">
                                    @if (Model.UserRole.IsActive == true)
                                    {
                                        <option selected value="1">Aktif</option>
                                        <option value="0">Pasif</option>
                                    }
                                    else
                                    {
                                        <option value="1">Aktif</option>
                                        <option selected value="0">Pasif</option>
                                    }
                                </select>
                            </div>
                            <div class="mb-3">
                                <button type="submit" class="btn btn-outline-primary d-inline-block"><i class="fa fa-edit"></i> Update New User Role</button>
                                <a href="/admin/kullanici-rol-listele" class="btn btn-outline-dark"><i class="fa fa-reply-all"></i> Back To List</a>
                            </div>
                        </form>
                    </div> <!-- end col -->
                </div>
                <!-- end row-->

            </div> <!-- end card-body -->
        </div> <!-- end card -->
    </div><!-- end col -->
</div>
<!-- end row -->

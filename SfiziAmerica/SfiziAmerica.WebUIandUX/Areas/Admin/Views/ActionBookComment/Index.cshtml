@model IEnumerable<SfiziAmerica.EntityLayer.Model.BookComment>
@{
    ViewData["Title"] = "Müşteri Yorum Listesi";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}
@section scripts{
    <script src="/PageJs/bookComment.js"></script>
}
<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-body">
                <h4 class="mt-0 header-title">Müşteri Yorum Listesi</h4>

                <table id="datatable-buttons" class="table table-striped table-bordered dt-responsive nowrap">
                    <thead>
                        <tr>
                            <th>Statü</th>
                            <th>Adı Soyadı</th>
                            <th>Telefon</th>
                            <th>E-posta</th>
                            <th></th>
                        </tr>
                    </thead>


                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                @if (item.IsActive)
                                {
                                    <td>Active</td>
                                }
                                else
                                {
                                    <td>Pasif</td>
                                }
                                <td>@item.NameSurname</td>
                                <td>@item.Phone</td>
                                <td>@item.Email</td>

                                <td>
                                    <a href="/admin/musteri-yorumlari-guncelle/@item.ID" class="btn btn-sm btn-primary"><i class='fa fa-edit'></i></a>
                                    <a href="/admin/musteri-yorumlari-detay/@item.ID" class="btn btn-sm btn-warning"><i class='fa fa-eye'></i></a>
                                    <button data-id="@item.ID" class="btn btn-danger btn-sm btnDelete"><i class='fa fa-trash'></i></button>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>

    </div>
</div>
<!-- end row -->
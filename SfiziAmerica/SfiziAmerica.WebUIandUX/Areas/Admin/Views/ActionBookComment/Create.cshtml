
@{
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}
@section scripts{
    <script src="/PageJs/addBookComment.js"></script>
}
<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-body">
                <h4 class="header-title">Yorum Ekleme</h4>
                <div class="row">
                    <div class="col-lg-12">
                        <form id="form-submit">

                            <div class="mb-3">
                                <label for="simpleinput" class="form-label">Resim</label>
                                <input class="form-control" name="ImageUrl" type="file">
                            </div>

                            <div class="mb-3">
                                <label for="simpleinput" class="form-label">Adı Soyadı</label>
                                <input class="form-control" name="NameSurname" type="text">
                            </div>
                            <div class="mb-3">
                                <label for="simpleinput" class="form-label">Telefon</label>
                                <input  class="form-control" name="Phone" type="text">
                            </div>
                            <div class="mb-3">
                                <label for="simpleinput" class="form-label">E-posta</label>
                                <input  class="form-control" name="Email" type="text">
                            </div>
                            <div class="mb-3">
                                <label for="simpleinput" class="form-label">Yorum</label>
                                <textarea class="form-control" name="Message"></textarea>
                            </div>
                            <div class="mb-3">
                                <label for="simpleinput" class="form-label">Statü</label>
                                <select required name="IsActive" class="form-select">
                                    <option value="1">Active</option>
                                    <option value="0">Passive</option>
                                </select>
                            </div>
                            <div class="mb-3">
                                <button type="submit" class="btn btn-outline-success d-inline-block"><i class="fa fa-edit"></i> Add New Customer Comment</button>
                                <a href="/admin/musteri-yorumlari-listele" class="btn btn-outline-dark"><i class="fa fa-reply-all"></i> Back To List</a>
                            </div>
                        </form>
                    </div> <!-- end col -->
                </div>
                <!-- end row-->

            </div> <!-- end card-body -->
        </div> <!-- end card -->
    </div><!-- end col -->
</div>
<!-- end row -->
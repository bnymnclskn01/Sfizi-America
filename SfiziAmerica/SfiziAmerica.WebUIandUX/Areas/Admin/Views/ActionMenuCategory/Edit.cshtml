@model SfiziAmerica.WebUIandUX.Areas.Admin.ViewModel.updateMenuCategoryViewModel
@{
    ViewData["Title"] = "Update New Menu Category";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}
@section scripts{
        <script>
            CKEDITOR.replace('Description');
            CKEDITOR.instances.Description.setData(`@Html.Raw(Model.MenuCategory.Description)`);
        </script>
        <script src="/PageJs/updateMenuCategory.js"></script>
}
<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-body">
                <h4 class="header-title">Update New Menu Category</h4>
                <div class="row">
                    <div class="col-lg-12">
                        <form id="form-submit">
                            <input hidden name="ID" value="@Model.MenuCategory.ID" />
                            <div class="mb-3">
                                <label for="simpleinput" class="form-label">Parent Menu Category</label>
                                <select required name="MenuCategoryID" class="form-select">
                                    <optgroup label="Please Select Menu Category (Not Required Field. If you do not want to choose a Sub-Menu Category you must set the selection No Sub-Menu Category)">

                                        @foreach (var item in Model.MenuCategories.OrderBy(x => x.Rank))
                                        {
                                            @if (Model.MenuCategory.MenuCategoryID == null)
                                            {
                                                <option value="">No Sub-Catering</option>
                                                <option value="@item.ID">@item.Title</option>
                                            }
                                            else
                                            {
                                                @if (Model.MenuCategory.MenuCategoryID == item.MenuCategoryID)
                                                {
                                                    <option value="@item.ID">@item.Title</option>
                                                }
                                                else
                                                {
                                                    <option value="">No Sub-Catering</option>
                                                    <option value="@item.ID">@item.Title</option>
                                                }

                                            }
                                        }
                                    </optgroup>

                                </select>
                            </div>
                            <div class="mb-3">
                                <label for="simpleinput" class="form-label">Rank</label>
                                <input required value="@Model.MenuCategory.Rank" class="form-control" name="Rank" type="number" placeholder="Please Enter Rank">
                            </div>
                            <div class="mb-3">
                                <label for="simpleinput" class="form-label">Picture</label>
                                <input type="file" class="form-control" name="ImageUrl1" accept="image/*">
                            </div>
                            <div class="mb-3">
                                <label for="simpleinput" class="form-label">Picture - 2</label>
                                <input type="file" class="form-control" name="ImageUrl2" accept="image/*">
                            </div>
                            <div class="mb-3">
                                <label for="simpleinput" class="form-label">Title</label>
                                <input required value="@Model.MenuCategory.Title" class="form-control" name="Title" type="text" placeholder="Please Enter Catering Title">
                            </div>
                            <div class="mb-3">
                                <label for="simpleinput" class="form-label">Short Description</label>
                                <textarea class="form-control" name="ShortDescription" placeholder="Please Enter Short Description">@Model.MenuCategory.ShortDescription</textarea>
                            </div>
                            <div class="mb-3">
                                <label for="simpleinput" class="form-label">Description</label>
                                <textarea id="Description" class="form-control ckeditor" name="Description" required placeholder="Please Enter Description"></textarea>
                            </div>
                            <div class="mb-3">
                                <label for="simpleinput" class="form-label">Status</label>
                                <select required name="IsActive" class="form-select">
                                    @if (Model.MenuCategory.IsActive == true)
                                    {
                                        <option selected value="1">Aktif</option>
                                        <option value="0">Pasif</option>
                                    }
                                    else
                                    {
                                        <option value="1">Aktif</option>
                                        <option selected value="0">Pasif</option>
                                    }
                                </select>
                            </div>
                            <div class="mb-3">
                                <label for="simpleinput" class="form-label">Seo Title</label>
                                <input type="text" value="@Model.MenuCategory.seoTitle" class="form-control" name="seoTitle" required maxlength="110" placeholder="Please Enter Seo Title" />
                            </div>
                            <div class="mb-3">
                                <label for="simpleinput" class="col-md-2 col-form-label">Seo Keywords</label>
                                <input type="text" value="@Model.MenuCategory.seoKeywords" class="form-control" name="seoKeywords" required maxlength="110" placeholder="Please Enter Seo Keywords" />
                            </div>
                            <div class="mb-3">
                                <label for="simpleinput" class="col-md-2 col-form-label">Seo Description</label>
                                <input type="text" value="@Model.MenuCategory.seoDescription" class="form-control" name="seoDescription" required maxlength="170" placeholder="Please Enter Seo Description" />
                            </div>
                            <div class="mb-3">
                                <label for="simpleinput" class="col-md-2 col-form-label">Seo Reply</label>
                                <input type="email" value="@Model.MenuCategory.seoReply" class="form-control" name="seoReply" required maxlength="70" placeholder="Please Enter Seo Reply Trial: info@sfizi.com" />
                            </div>
                            <div class="mb-3">
                                <label for="simpleinput" class="form-label">Seo Twitter Title</label>
                                <input type="text" value="@Model.MenuCategory.seoTwitterTitle" class="form-control" name="seoTwitterTitle" required maxlength="110" placeholder="Please Enter Seo Twitter Title" />
                            </div>
                            <div class="mb-3">
                                <label for="simpleinput" class="col-md-2 col-form-label">Seo Twitter Keywords</label>
                                <input type="text" value="@Model.MenuCategory.seoTwitterKeywords" class="form-control" name="seoTwitterKeywords" required maxlength="110" placeholder="Please Enter Seo Twitter Keywords" />
                            </div>
                            <div class="mb-3">
                                <label for="simpleinput" class="col-md-2 col-form-label">Seo Twitter Description</label>
                                <input type="text" value="@Model.MenuCategory.seoTwitterDescription" class="form-control" name="seoTwitterDescription" required maxlength="170" placeholder="Please Enter Seo Twitter Description" />
                            </div>
                            <div class="mb-3">
                                <label for="simpleinput" class="col-md-2 col-form-label">Seo Twitter Url</label>
                                <input type="url" value="@Model.MenuCategory.seoTwitterUrl" class="form-control" name="seoTwitterUrl" required maxlength="100" placeholder="Please Enter Seo Twitter Url" />
                            </div>

                            <div class="mb-3">
                                <label for="simpleinput" class="form-label">Seo Facebook Title</label>
                                <input type="text" value="@Model.MenuCategory.seoFacebookTitle" class="form-control" name="seoFacebookTitle" required maxlength="110" placeholder="Please Enter Seo Facebook Title" />
                            </div>
                            <div class="mb-3">
                                <label for="simpleinput" class="col-md-2 col-form-label">Seo Facebook Keywords</label>
                                <input type="text" value="@Model.MenuCategory.seoFacebookKeywrods" class="form-control" name="seoFacebookKeywrods" required maxlength="110" placeholder="Please Enter Seo Facebook Keywords" />
                            </div>
                            <div class="mb-3">
                                <label for="simpleinput" class="col-md-2 col-form-label">Seo Facebook Description</label>
                                <input type="text" value="@Model.MenuCategory.seoFacebookDescription" class="form-control" name="seoFacebookDescription" required maxlength="170" placeholder="Please Enter Seo Facebook Description" />
                            </div>
                            <div class="mb-3">
                                <label for="simpleinput" class="col-md-2 col-form-label">Seo Facebook Url</label>
                                <input type="url" value="@Model.MenuCategory.seoFacebookUrl" class="form-control" name="seoFacebookUrl" required maxlength="100" placeholder="Please Enter Seo Facebook Url" />
                            </div>
                            <div class="mb-3">
                                <button type="submit" class="btn btn-outline-primary d-inline-block"><i class="fa fa-check"></i> Update New Menu Category</button>
                                <a href="/admin/menu-kategori-listele" class="btn btn-outline-dark"><i class="fa fa-reply-all"></i> Back To List</a>
                            </div>
                        </form>
                    </div> <!-- end col -->
                </div>
                <!-- end row-->

            </div> <!-- end card-body -->
        </div> <!-- end card -->
    </div><!-- end col -->
</div>
<!-- end row -->
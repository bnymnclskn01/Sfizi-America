@model IEnumerable<SfiziAmerica.EntityLayer.Model.MenuCategory>
@{
    ViewData["Title"] = "Menu Category List";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}
@section scripts{
    <script src="/PageJs/menuCategory.js"></script>
}
<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-body">
                <h4 class="mt-0 header-title">Menu Category List</h4>

                <table id="datatable-buttons" class="table table-striped table-bordered dt-responsive nowrap">
                    <thead>
                        <tr>
                            <th>Rank</th>
                            <th>Menu Category</th>
                            <th>Title</th>
                            <th>Image</th>
                            <th>Status</th>
                            <th></th>
                        </tr>
                    </thead>


                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.Rank</td>
                                @if (item.MenuCategoryID == null)
                                {
                                    <td>NULL</td>
                                }
                                else
                                {
                                    <td>@item.ParentMenuCategory.Title</td>
                                }
                                <td>@item.Title</td>
                                <td><img src="/Image/Menu/@item.ImageUrl1" width="100" /></td>
                                @if (item.IsActive)
                                {
                                    <td>Active</td>
                                }
                                else
                                {
                                    <td>Passive</td>
                                }
                                <td>
                                    <a href="/admin/menu-kategori-guncelle/@item.ID" class="btn btn-sm btn-primary"><i class='fa fa-edit'></i></a>
                                    <button data-id="@item.ID" class="btn btn-danger btn-sm btnDelete"><i class='fa fa-trash'></i></button>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>

    </div>
</div>
<!-- end row -->
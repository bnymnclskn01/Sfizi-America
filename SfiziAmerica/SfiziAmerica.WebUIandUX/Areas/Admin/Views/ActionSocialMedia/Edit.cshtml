@model SfiziAmerica.EntityLayer.Model.SocialMedia
@{
    ViewData["Title"] = "Update New Social Media";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}
@section scripts{
    <script src="/PageJs/updateSocialMedia.js"></script>
}
<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-body">
                <h4 class="header-title">Update New Social Media</h4>
                <div class="row">
                    <div class="col-lg-12">
                        <form id="form-submit">
                            <input hidden name="ID" value="@Model.ID" />
                            <div class="mb-3">
                                <label for="simpleinput" class="form-label">Title</label>
                                <input type="text" class="form-control" value="@Model.Title" name="Title" maxlength="75" required placeholder="Please Enter Title Trial : Facebook" />
                            </div>
                            <div class="mb-3">
                                <label for="simpleinput" class="form-label">Url</label>
                                <input type="url" class="form-control" name="Url" value="@Model.Url" maxlength="115" placeholder="Not a Required Field. Please Enter Url Trial : https://www.facebook.com/sfizi.com" />
                            </div>
                            <div class="mb-3">
                                <label class="form-label">Social Media</label>
                                <select data-toggle="select2" name="Icon" class="form-select" placeholder="Selected Social Media">
                                    <option value="@Model.Icon">@Model.Icon</option>
                                    <option value="fab fa-facebook-f">fab fa-facebook-f</option>
                                    <option value="fab fa-youtube">fab fa-youtube</option>
                                    <option value="fab fa-instagram">fab fa-instagram</option>
                                    <option value="fab fa-whatsapp">fab fa-whatsapp</option>
                                    <option value="fab fa-linkedin">fab fa-linkedin</option>
                                </select>
                            </div>
                            <div class="mb-3">
                                <label for="simpleinput" class="form-label">Status</label>
                                <select required name="IsActive" class="form-select">
                                    @if (Model.IsActive == true)
                                    {
                                        <option selected value="1">Aktif</option>
                                            <option value="0">Pasif</option>
                                    }
                                    else
                                    {
                                        <option value="1">Aktif</option>
                                        <option selected value="0">Pasif</option>
                                    }
                                </select>
                            </div>
                            <div class="mb-3">
                                <button type="submit" class="btn btn-outline-primary d-inline-block"><i class="fa fa-check"></i> Update New Social Media</button>
                                <a href="/admin/sosyal-medya-listele" class="btn btn-outline-dark"><i class="fa fa-reply-all"></i> Back To List</a>
                            </div>
                        </form>
                    </div> <!-- end col -->
                </div>
                <!-- end row-->

            </div> <!-- end card-body -->
        </div> <!-- end card -->
    </div><!-- end col -->
</div>
<!-- end row -->
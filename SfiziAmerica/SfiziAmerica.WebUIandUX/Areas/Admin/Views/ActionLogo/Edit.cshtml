@model SfiziAmerica.WebUIandUX.Areas.Admin.ViewModel.UpdateLogoViewModel
@{
    ViewData["Title"] = "Yeni Logo Güncelle";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}
@section scripts{
    <script src="/PageJs/updateLogo.js"></script>
}
<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-body">
                <h4 class="header-title">Update New About</h4>
                <div class="row">
                    <div class="col-lg-12">
                        <form id="form-submit">
                            <input hidden name="ID" value="@Model.Logo.ID" />
                            <div class="mb-3">
                                <label for="simpleinput" class="form-label">Resim</label>
                                <input type="file" class="form-control" name="ImageUrl" accept="image/*">
                            </div>
                            <div class="mb-3">
                                <label for="simpleinput" class="form-label">Başlık</label>
                                <input required class="form-control" value="@Model.Logo.Title" name="Title" type="text" placeholder="Please Enter About Title">
                            </div>
                            <div class="mb-3">
                                <label for="simpleinput" class="form-label">Resim Alt Başlık</label>
                                <input required class="form-control" value="@Model.Logo.ImageAltTag" name="ImageAltTag" type="text" placeholder="Please Enter About Title">
                            </div>
                            <div class="mb-3">
                                <label for="simpleinput" class="form-label">Status</label>
                                <select required name="IsActive" class="form-select">
                                    @if (Model.Logo.IsActive == true)
                                    {
                                        <option selected value="1">Aktif</option>
                                        <option value="0">Pasif</option>
                                    }
                                    else
                                    {
                                        <option value="1">Aktif</option>
                                        <option selected value="0">Pasif</option>
                                    }
                                </select>
                            </div>
                            <div class="mb-3">
                                <button type="submit" class="btn btn-outline-primary d-inline-block"><i class="fa fa-edit"></i> Yeni Logo Güncelle</button>
                                <a href="/admin/logo-listele" class="btn btn-outline-dark"><i class="fa fa-reply-all"></i> Listeye Geri Dön</a>
                            </div>
                        </form>
                    </div> <!-- end col -->
                </div>
                <!-- end row-->

            </div> <!-- end card-body -->
        </div> <!-- end card -->
    </div><!-- end col -->
</div>
<!-- end row -->
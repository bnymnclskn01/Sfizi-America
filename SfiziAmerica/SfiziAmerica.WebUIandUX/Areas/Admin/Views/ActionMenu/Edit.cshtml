@model SfiziAmerica.WebUIandUX.Areas.Admin.ViewModel.updateMenuViewModel
@{
    ViewData["Title"] = "Update New Menu";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}
@section scripts{
    <script>
        CKEDITOR.replace('Description');
        CKEDITOR.instances.Description.setData(`@Html.Raw(Model.Menu.Description)`);
    </script>
    <script src="/PageJs/updateMenu.js"></script>
}
<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-body">
                <h4 class="header-title">Update New Menu</h4>
                <div class="row">
                    <div class="col-lg-12">
                        <form id="form-submit">
                            <input hidden name="ID" value="@Model.Menu.ID" />
                            <div class="mb-3">
                                <label for="simpleinput" class="form-label">Category Menu</label>
                                <select required name="MenuCategoryID" multiple class="form-control">
                                    <optgroup label="Please Multi Select Category Menu">
                                        @foreach (var item in Model.MenuCategories.OrderBy(x => x.Rank))
                                        {
                                            if (Model.Menu.CategoryMenus.Any(s => s.MenuCategoryID == item.ID))
                                            {
                                                <option value="@item.ID" selected>@item.Title</option>
                                            }
                                            else
                                            {
                                                <option value="@item.ID">@item.Title</option>
                                            }
                                        }
                                    </optgroup>

                                </select>
                            </div>
                            <div class="mb-3">
                                <label for="simpleinput" class="form-label">Picture - 1</label>
                                <input type="file" class="form-control" name="ImageUrl1" accept="image/*">
                            </div>
                            <div class="mb-3">
                                <label for="simpleinput" class="form-label">Picture - 2</label>
                                <input type="file" class="form-control" name="ImageUrl2" accept="image/*">
                            </div>
                            <div class="mb-3">
                                <label for="simpleinput" class="form-label">Picture - 3</label>
                                <input type="file" class="form-control" name="ImageUrl3" accept="image/*">
                            </div>
                            <div class="mb-3">
                                <label for="simpleinput" class="form-label">Picture - 4</label>
                                <input type="file" class="form-control" name="ImageUrl4" accept="image/*">
                            </div>
                            <div class="mb-3">
                                <label for="simpleinput" class="form-label">Title</label>
                                <input required value="@Model.Menu.Title" class="form-control" name="Title" type="text" placeholder="Please Enter Catering Title">
                            </div>
                            <div class="mb-3">
                                <label for="simpleinput" class="form-label">Short Description</label>
                                <textarea class="form-control" name="ShortDescription" placeholder="Please Enter Short Description">@Model.Menu.ShortDescription</textarea>
                            </div>
                            <div class="mb-3">
                                <label for="simpleinput" class="form-label">Description</label>
                                <textarea id="Description" value="@Model.Menu.Discount" class="form-control ckeditor" name="Description" required placeholder="Please Enter Description"></textarea>
                            </div>
                            <div class="mb-3">
                                <label for="simpleinput" class="form-label">Price</label>
                                <input required class="form-control" value="@Model.Menu.Price" name="Price" type="text" placeholder="Please Enter Catering Price Trial:35.99">
                            </div>
                            <div class="mb-3">
                                <label for="simpleinput" class="form-label">Discount</label>
                                <input required class="form-control" value="@Model.Menu.Discount" name="Discount" type="text" placeholder="Please Enter Catering Discont Trial:18">
                            </div>
                            <div class="mb-3">
                                <label for="simpleinput" class="form-label">Status</label>
                                <select required name="IsActive" class="form-select">
                                    <option value="1">Active</option>
                                    <option value="0">Passive</option>
                                </select>
                            </div>
                            <div class="mb-3">
                                <label for="simpleinput" class="form-label">Seo Title</label>
                                <input type="text" value="@Model.Menu.seoTitle" class="form-control" name="seoTitle" required maxlength="110" placeholder="Please Enter Seo Title" />
                            </div>
                            <div class="mb-3">
                                <label for="simpleinput" class="col-md-2 col-form-label">Seo Keywords</label>
                                <input type="text" value="@Model.Menu.seoKeywords" class="form-control" name="seoKeywords" required maxlength="110" placeholder="Please Enter Seo Keywords" />
                            </div>
                            <div class="mb-3">
                                <label for="simpleinput" class="col-md-2 col-form-label">Seo Description</label>
                                <input type="text" value="@Model.Menu.seoDescription" class="form-control" name="seoDescription" required maxlength="170" placeholder="Please Enter Seo Description" />
                            </div>
                            <div class="mb-3">
                                <label for="simpleinput" class="col-md-2 col-form-label">Seo Reply</label>
                                <input type="email" value="@Model.Menu.seoReply" class="form-control" name="seoReply" required maxlength="70" placeholder="Please Enter Seo Reply Trial: info@sfizi.com" />
                            </div>
                            <div class="mb-3">
                                <label for="simpleinput" class="form-label">Seo Twitter Title</label>
                                <input type="text" value="@Model.Menu.seoTwitterTitle" class="form-control" name="seoTwitterTitle" required maxlength="110" placeholder="Please Enter Seo Twitter Title" />
                            </div>
                            <div class="mb-3">
                                <label for="simpleinput" class="col-md-2 col-form-label">Seo Twitter Keywords</label>
                                <input type="text" value="@Model.Menu.seoTwitterKeywords" class="form-control" name="seoTwitterKeywords" required maxlength="110" placeholder="Please Enter Seo Twitter Keywords" />
                            </div>
                            <div class="mb-3">
                                <label for="simpleinput" class="col-md-2 col-form-label">Seo Twitter Description</label>
                                <input type="text" value="@Model.Menu.seoTwitterDescription" class="form-control" name="seoTwitterDescription" required maxlength="170" placeholder="Please Enter Seo Twitter Description" />
                            </div>
                            <div class="mb-3">
                                <label for="simpleinput" class="col-md-2 col-form-label">Seo Twitter Url</label>
                                <input type="url" value="@Model.Menu.seoTwitterUrl" class="form-control" name="seoTwitterUrl" required maxlength="100" placeholder="Please Enter Seo Twitter Url" />
                            </div>

                            <div class="mb-3">
                                <label for="simpleinput" class="form-label">Seo Facebook Title</label>
                                <input type="text" value="@Model.Menu.seoFacebookTitle" class="form-control" name="seoFacebookTitle" required maxlength="110" placeholder="Please Enter Seo Facebook Title" />
                            </div>
                            <div class="mb-3">
                                <label for="simpleinput" class="col-md-2 col-form-label">Seo Facebook Keywords</label>
                                <input type="text" value="@Model.Menu.seoFacebookKeywrods" class="form-control" name="seoFacebookKeywrods" required maxlength="110" placeholder="Please Enter Seo Facebook Keywords" />
                            </div>
                            <div class="mb-3">
                                <label for="simpleinput" class="col-md-2 col-form-label">Seo Facebook Description</label>
                                <input type="text" value="@Model.Menu.seoFacebookDescription" class="form-control" name="seoFacebookDescription" required maxlength="170" placeholder="Please Enter Seo Facebook Description" />
                            </div>
                            <div class="mb-3">
                                <label for="simpleinput" class="col-md-2 col-form-label">Seo Facebook Url</label>
                                <input type="url" value="@Model.Menu.seoFacebookUrl" class="form-control" name="seoFacebookUrl" required maxlength="100" placeholder="Please Enter Seo Facebook Url" />
                            </div>
                            <div class="mb-3">
                                <button type="submit" class="btn btn-outline-primary d-inline-block"><i class="fa fa-check"></i> Update New Menu</button>
                                <a href="/admin/menu-listele" class="btn btn-outline-dark"><i class="fa fa-reply-all"></i> Back To List</a>
                            </div>
                        </form>
                    </div> <!-- end col -->
                </div>
                <!-- end row-->

            </div> <!-- end card-body -->
        </div> <!-- end card -->
    </div><!-- end col -->
</div>
<!-- end row -->